                android:text="8"
                android:textSize="14sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bot9"
                android:text="9"
                android:textSize="14sp" />

            <Button
                android:id="@+id/sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
