                android:textColor="#F44336"
                android:textSize="14sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/mem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="memag"
