                android:textColor="#F44336"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/menbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="divi"
