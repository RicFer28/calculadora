                android:text="1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="bot2"
                android:text="2"
                android:textSize="14sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
